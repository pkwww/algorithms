{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_file",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-g",
        "-Wall",
        "-std=c++17",
        "-O2",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
  ]
}